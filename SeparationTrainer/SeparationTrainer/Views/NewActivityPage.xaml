<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeparationTrainer.Views.NewActivityPage"
             Visual="Material">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label Text="{Binding TimerText}"
                   FontSize="Large"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />

            <Label Text="Stress Level"/>
            <Picker ItemsSource="{Binding StressLevels}"
                    SelectedItem="{Binding SelectedStressLevel}"/>

            <Label Text="Notes"/>
            <Entry Text="{Binding Notes}"/>

            <Button Text="{Binding StartStopButtonText}" Command="{Binding StartStopStopWatchCommand}" />
            <Button Text="Save" Command="{Binding SaveActivityCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>