<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:SeparationTrainer.Helpers;assembly=SeparationTrainer"
             xmlns:controls="clr-namespace:SeparationTrainer.Controls;assembly=SeparationTrainer"
             x:Class="SeparationTrainer.Views.NewActivityPage"
             Visual="Material"
             Title="Record Activity"
             BackgroundColor="{DynamicResource Surface}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancel" Command="{Binding CancelCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="15">
                <Grid HorizontalOptions="CenterAndExpand"
                      VerticalOptions="CenterAndExpand">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <controls:TimerButton Grid.Row="0"
                                          VerticalOptions="Center"
                                          HorizontalOptions="Center"
                                          ElapsedTime="{Binding ElapsedTime}"
                                          ButtonCommand="{Binding StartStopStopWatchCommand}"/>

                    <Grid Grid.Row="1"
                          Margin="0,40,0,0"
                          HorizontalOptions="CenterAndExpand">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Text="Reset"
                                HorizontalOptions="Start"
                                BackgroundColor="{DynamicResource Surface}"
                                TextColor="{DynamicResource OnSurface}"
                                Command="{Binding ResetTimerCommand}"
                                IsVisible="{Binding ResetTimerIsEnabled}"
                                VerticalOptions="Center" />

                        <ImageButton Grid.Column="1"
                                     HeightRequest="50"
                                     WidthRequest="50"
                                     CornerRadius="25"
                                     Padding="4"
                                     VerticalOptions="Center"
                                     BackgroundColor="{DynamicResource Primary}"
                                     Command="{Binding StartStopStopWatchCommand}"
                                     HorizontalOptions="Center">
                            <ImageButton.Source>
                                <FontImageSource FontFamily="{DynamicResource MaterialFontFamily}"
                                                 Size="Small"
                                                 Glyph="{Binding StopWatchIsRunning, Converter={StaticResource BoolToStartStopGlyphConverter}}" />
                            </ImageButton.Source>
                        </ImageButton>
                    </Grid>

                </Grid>


                <Label Text="Stress Level" />
                <Picker ItemsSource="{Binding StressLevels}"
                        SelectedItem="{Binding SelectedStressLevel}" />

                <Label Text="Notes" />
                <Editor Text="{Binding Notes}"
                        AutoSize="TextChanges"
                        Placeholder="Add Notes Here"/>

                <Button Text="Save" Command="{Binding SaveActivityCommand}" />
            </StackLayout>
        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>